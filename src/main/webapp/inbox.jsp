                <div class="inbox-body__username-box">
                    <p class="inbox-body__username-element">Loading...</p>
                </div>
            </div>
            <div class="inbox-body__message-container">
            </div>
            
        </div>
        <div class="inbox-body__typing">
                <div class="inbox-body__typing-block">
                    <textarea class="inbox-body__input-element" placeholder="Type here" rows = "1"></textarea> 
                    <button class="inbox-body__send-button-element"><span>Send</span></button>
                </div>
            </div>
    </div>


<script type="module" src="/assets/js/features/SocialMedia/message/inbox/inbox.js"></script>
